local petsModule = {}

function petsModule:CheckPetClass(class, pet)
    if typeof(class) == 'table' and typeof(pet) == 'Instance' then
        for i,v in pairs(class) do
            if pet.Image == v then
                return true, pet, pet.Image
                pet:Remove()
            end
        end
        return false, pet, pet.Image
    else
        warn('JeHub: Invalid class')
    end
end

function petsModule:getPets(location)
    if typeof(location) == 'Instance' then
        local pets = {}
        for i,v in pairs(location:GetChildren()) do
            if v.ClassName == 'ImageButton' then
                pets[i] = v
            end
        end
        return pets
    else
        warn('JeHub: Invalid Class')
    end
end

return petsModule
